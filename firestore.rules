
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can get and update their own profile document.
      // They cannot list all users, which is more secure.
      allow get: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      
      // Allow user document creation for new sign-ups.
      allow create: if request.auth != null;
      
      // Users can read (get/list) and write their own badges in the subcollection.
      match /userBadges/{badgeId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Users can read and write their own quiz progress documents.
    match /quizProgress/{progressId} {
      allow read, write: if request.auth.uid == progressId.split('_')[0];
    }
  }
}
