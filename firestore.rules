
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Users can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Users can read and write their own earned badges.
      match /userBadges/{badgeId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Users can read and write their own quiz progress documents.
    // The document ID is structured as "{userId}_{topicId}".
    match /quizProgress/{userId}_{topicId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
