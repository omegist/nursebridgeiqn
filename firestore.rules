
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Any authenticated user can read any user profile (for the leaderboard).
      allow read: if request.auth != null;
      
      // A user can only write to their own profile.
      allow write: if request.auth.uid == userId;
    }

    // Quiz progress collection
    match /quizProgress/{progressId} {
      // A user can only read or write their own progress documents.
      // We verify this by checking if their UID matches the first part of the document ID.
      allow read, write: if request.auth != null && request.auth.uid == progressId.split('_')[0];
    }
  }
}
