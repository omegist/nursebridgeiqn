
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read the list of users for the leaderboard.
      // The 'list' permission allows querying a collection.
      allow list: if request.auth != null;
      
      // An authenticated user can get, create, or update their own user document.
      // The 'get' permission allows fetching a single document by ID.
      allow get, create, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for the 'quizProgress' collection
    match /quizProgress/{progressId} {
      // A user can only read and write their own progress documents.
      // The document ID is formatted as "userId_topicId", so we check the first part.
      allow read, write: if request.auth != null && request.auth.uid == split(progressId, '_')[0];
    }
  }
}
