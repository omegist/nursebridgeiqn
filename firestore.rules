
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the main user document
    match /users/{userId} {
      allow get, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for any subcollection under a user document (e.g., userBadges)
    // This allows a user to read/write to their own subcollections.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule for quiz progress
    match /quizProgress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == progressId.split('_')[0];
    }
  }
}
