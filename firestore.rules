
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Any authenticated user can read any user's profile data.
      // This is required for the leaderboard to function.
      allow read: if request.auth != null;
      
      // A user can only write to their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /quizProgress/{progressId} {
      // A user can only read and write their own quiz progress.
      // We verify this by checking if the requesting user's UID matches the 'userId'
      // field stored within the document.
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
