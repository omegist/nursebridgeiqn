rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write to any document in their own user path.
    // This includes their main user document and any subcollections like quizProgress or testProgress.
    // This rule is secure because it's locked down to the authenticated user's ID.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
