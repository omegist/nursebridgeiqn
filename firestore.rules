rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /quizProgress/{progressId} {
      // Allow read/write if the document ID starts with the user's UID.
      // Doc ID is formatted as "UID_topicId".
      allow read, write: if request.auth != null && request.auth.uid == progressId.split('_')[0];
    }
    
    match /testProgress/{progressId} {
      // Allow read/write if the document ID starts with the user's UID.
      // Doc ID is formatted as "UID_testId".
      allow read, write: if request.auth != null && request.auth.uid == progressId.split('_')[0];
    }
  }
}
